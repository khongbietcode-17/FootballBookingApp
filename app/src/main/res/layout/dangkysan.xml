<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/white">

    <EditText
        android:id="@+id/et_tensan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sân"
        android:background="@drawable/rounded_edidtext"
        android:padding="12dp"
        android:textSize="16sp"/>

    <Spinner
        android:id="@+id/spinner_tinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edidtext"
        android:padding="12dp" />

    <Spinner
        android:id="@+id/spinner_thanhpho_huyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edidtext"
        android:padding="12dp" />

    <EditText
        android:id="@+id/et_giasan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá sân"
        android:background="@drawable/rounded_edidtext"
        android:padding="12dp"
        android:textSize="16sp"
        android:inputType="numberDecimal"/>


    <Button
        android:id="@+id/btn_dangkys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:padding="14dp"
        android:text="Hoàn tất đăng ký sân bóng"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</LinearLayout>