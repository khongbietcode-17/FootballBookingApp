<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_san_bong"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_san_mac_dinh" />

        <Button
            android:id="@+id/btn_cap_nhat_hinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật hình ảnh"
            android:padding="8dp"
            android:layout_marginTop="12dp"/>

        <!-- Thông tin sân bóng -->
        <TextView
            android:id="@+id/tv_ten_san"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sân bóng"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/tv_diachi_san"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: Đang tải..."
            android:textSize="16sp"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tv_gia_san"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá: Đang tải..."
            android:textSize="16sp"
            android:paddingBottom="12dp" />


        <!-- Danh sách đặt sân -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách đặt sân"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <ListView
            android:id="@+id/lv_datsan"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"/>
    </LinearLayout>

</ScrollView>
